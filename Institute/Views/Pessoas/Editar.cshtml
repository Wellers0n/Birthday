@model Pessoa
@{
    var pessoa = Model;
}
<form action="/Pessoas/Editar" method="POST">
    <div class="form-group">
        <p>Cadastrado em: @pessoa.Data</p>
    </div>

    <div class="form-group">
        <label>Matricula</label>
        <input disabled type="number" class="form-control" name="matricula" value="@pessoa.Matricula">
    </div>
    <div class="form-group">
        <input hidden type="number" class="form-control" name="matricula" value="@pessoa.Matricula">
    </div>
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" name="nome" value="@pessoa.Nome">
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-primary" href="/Pessoas/Lista">Voltar</a>
</form>